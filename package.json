{
  "name": "@giancosta86/jardinero-frontend",
  "version": "1.1.0-rc.18",
  "description": "Pluggable, React-based frontend for Jardinero",
  "appName": "Jardinero",
  "engines": {
    "node": ">=17.1.0"
  },
  "bin": {
    "jardinero-start-frontend": "bin/start.js",
    "jardinero-copy-frontend": "bin/copy.js"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "format": "prettier --write src",
    "check-format": "prettier --check src",
    "start": "webpack serve --config webpack.dev.js",
    "build": "yarn check-format && webpack --config webpack.prod.js"
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "css-loader": "^6.1.0",
    "html-webpack-plugin": "^5.3.2",
    "prettier": "^2.3.2",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.1.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "webpack": "^5.45.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "finalhandler": "^1.2.0",
    "fs-extra": "^10.1.0",
    "react": "^18",
    "react-dom": "^18",
    "serve-static": "^1.15.0",
    "socket.io-client": "^4.4.1"
  },
  "author": {
    "name": "Gianluca Costa",
    "url": "https://gianlucacosta.info/",
    "email": "gianluca@gianlucacosta.info"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giancosta86/jardinero-frontend.git"
  },
  "homepage": "https://github.com/giancosta86/jardinero-frontend#readme",
  "bugs": {
    "url": "https://github.com/giancosta86/jardinero-frontend/issues"
  },
  "keywords": [
    "Jardinero",
    "pluggable",
    "React",
    "frontend"
  ],
  "publishConfig": {
    "access": "public"
  }
}
