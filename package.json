{
  "name": "@giancosta86/jardinero-frontend",
  "version": "2.4.0",
  "description": "Pluggable, React-based frontend for Jardinero",
  "keywords": [
    "Jardinero",
    "pluggable",
    "React",
    "frontend"
  ],
  "homepage": "https://github.com/giancosta86/jardinero-frontend#readme",
  "bugs": "https://github.com/giancosta86/jardinero-frontend/issues",
  "license": "MIT",
  "author": {
    "name": "Gianluca Costa",
    "email": "gianluca@gianlucacosta.info",
    "url": "https://gianlucacosta.info/"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "main": "dist/lib",
  "types": "dist/lib",
  "bin": {
    "jardinero-start-frontend": "dist/bin/start.js",
    "jardinero-copy-frontend": "dist/bin/copy.js"
  },
  "repository": "giancosta86/jardinero-frontend",
  "scripts": {
    "clean": "rimraf dist giancosta86-*.tgz",
    "clean:all": "yarn clean && rimraf node_modules",
    "format": "prettier --write .",
    "check-format": "prettier --check src",
    "start": "webpack serve --config webpack.dev.js",
    "build-web": "webpack --config webpack.prod.js",
    "build-lib": "tsc -p src/lib",
    "build": "yarn check-format && concurrently \"yarn build-web\" \"yarn build-lib\"",
    "prepack": "yarn build"
  },
  "dependencies": {
    "@giancosta86/unified-logging": "^1.0.2",
    "@types/finalhandler": "^1.1.1",
    "finalhandler": "^1.2.0",
    "fs-extra": "^10.1.0",
    "react": "^18",
    "react-dom": "^18",
    "serve-static": "^1.15.0",
    "socket.io-client": "^4.4.1"
  },
  "devDependencies": {
    "@swc/core": "^1.2.218",
    "@types/fs-extra": "^9.0.13",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.2.2",
    "css-loader": "^6.7.1",
    "html-webpack-plugin": "^5.5.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sass": "^1.35.2",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "ts-loader": "^9.3.1",
    "typescript": "^4.3.5",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3",
    "webpack-merge": "^5.8.0"
  },
  "engines": {
    "node": ">=16.16.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
