{
  "compilerOptions": {
    "target": "es2019",
    "module": "es6",
    "jsx": "react",

    "incremental": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "baseUrl": "./src"
  }
}
